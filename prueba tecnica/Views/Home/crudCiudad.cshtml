    <script>
        var app = angular.module('myApp', []);
        app.controller('myCtrl', function ($scope, $http) {


            $scope.objetoParametros = {
                id_ciudad:'',
                nombre: '',
                id_pais: ''
                


            };


  
            $http.get('/api/Pais').then(function (response) {
                
                $scope.articulos3 = response.data;

            });



